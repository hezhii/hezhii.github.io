// Custom styles.
.site-author-image {
  border-radius: 100%;
  padding: 2px;
  border: 2px dashed #fff;
  animation: cycle 2s 0.5s forwards;
  transition: border-radius 2s;
}

.site-author-name {
  font-size: 16px;
}

// 代码块自定义样式``内的
code {
  margin: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
  margin: 5px 0;
  padding: 5px;
  border-radius: 3px;
  border: 1px solid #d6d6d6;
}

// 背景图片
body {
  background: url(/images/flying_paint.png) center no-repeat fixed rgb(255, 255, 255);
}
